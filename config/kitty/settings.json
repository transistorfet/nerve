{
    "modules": {
        "__type__": "config/Modules",
        "autoload": [
            "base",
            "computer",
            "http",
            "medialib",
            "player.xmms2cli",
            "remote",
            "serial"
        ]
    },
    "devices": {
        "computer": {
            "__type__": "computer/SystemDevice"
        },
        "rgb": {
            "baud": 19200,
            "file": "/dev/ttyACM1",
            "__type__": "serial/NerveSerialDevice"
        },
	"player": {
	    "__type__": "player/xmms2cli/Xmms2CLI"
	}
    },
    "servers": {
        "console": {
            "controllers": {
                "__default__": {
                    "__type__": "base/QueryController"
                }
            },
            "__type__": "base/Console"
        },
        "udp": {
	    "port": 5959,
            "controllers": {
                "__default__": {
                    "__type__": "base/QueryController"
                }
            },
            "__type__": "base/UDPServer"
        },
        "http": {
	    "username" : "dev",
	    "password" : "dev",
	    "port": 8889,
            "controllers": {
                "__default__": {
                    "__type__": "base/FileController",
		    "root" : "assets"
                },
                "assets": {
                    "__type__": "base/FileController",
		    "root" : "assets"
                },
                "query": {
                    "__type__": "base/QueryController"
                },
                "config": {
                    "__type__": "base/ConfigController"
                },
                "medialib": {
                    "__type__": "medialib/MediaLibController"
                },
                "remote": {
                    "__type__": "remote/RemoteController"
                }
            },
            "__type__": "http/HTTPServer"
        }
    }
}
